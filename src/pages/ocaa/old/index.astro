<script>
    import {
        animate,
        scroll,
    } from "https://cdn.jsdelivr.net/npm/motion@12.23.11/+esm";

    // Progress bar representing gallery scroll
    scroll(animate(".progress", { scaleX: [0, 1] }, { ease: "linear" }));
</script>

<style>
    html {
        scroll-snap-type: y mandatory;
    }

    .img-container {
        height: 100dvh;
        scroll-snap-align: start;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        position: relative;
        gap: 2rem;
    }

    .img-container > div {
        width: 300px;
        height: 400px;
        margin: 20px;
        background: #f5f5f5;
        overflow: hidden;
    }

    .img-container img {
        height: min(75%, min(50dvh, 75rem));
        object-fit: contain;
    }

    .progress {
        position: fixed;
        left: 0;
        right: 0;
        height: 5px;
        background: var(--color-sidebar-accent-foreground);
        bottom: 50px;
        transform: scaleX(0);
    }
</style>

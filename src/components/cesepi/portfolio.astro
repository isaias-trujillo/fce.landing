---

<section class="flex flex-col w-dvw items-center gap-8">
    <header>
        <h1>Conoce nuestros proyectos a través del tiempo.</h1>
    </header>
    <main class="flex flex-col gap-16">
        {
            items.map((item, index) => (
                <section
                    id={`section-${index}`}
                    class="flex flex-row gap-8 items-start"
                >
                    <span class="text-[7.5dvw] font-['Major_Mono_Display'] leading-none align-middle">
                        {item.year}
                    </span>
                    <div class="flex flex-row flex-wrap gap-4">
                        {item.projects.map((project, index) => (
                            <PortfolioProjectCard
                                title={project.title}
                                description={project.entity}
                                kind={project.kind}
                            />
                        ))}
                    </div>
                </section>
            ))
        }
    </main>
</section>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap");
</style>

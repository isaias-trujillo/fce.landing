---
import Block from "@/components/ocaa/hero/block.astro";
---

<Block id="ocaa" class="relative overflow-hidden flex place-items-center">
    <video
        src="https://videos.pexels.com/video-files/5599794/5599794-uhd_2560_1440_30fps.mp4"
        autoplay
        muted
        loop
        playsinline
        class="absolute object-cover w-full h-full"></video>
    <h1
        class="tracking-wider text-[clamp(5rem,17.5dvw,20rem)] text-white font-black leading-none mix-blend-difference font-['Martian_Mono']"
    >
        OCAA
    </h1>
</Block>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Martian+Mono:wght@100..800&display=swap");
</style>
